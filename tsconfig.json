{
  "include": ["utils/**/*.ts"],
  "exclude": [
    "**/tests/**/*",
    "**/rules/**/*.yml",
    "**/scripts/**/*.ts",
    "**/node_modules/**/*",
    "**/*.test.ts",
    "**/*.test.js",
    "**/*.spec.ts",
    "**/*.spec.js",
    "**/dist/**/*",
    "**/build/**/*"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": []
  }
}
